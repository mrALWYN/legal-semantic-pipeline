{
  "dashboard": {
    "id": null,
    "title": "Legal Pipeline - API Performance",
    "tags": ["legal", "api", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "25s",
    "panels": [
      {
        "type": "graph",
        "title": "API Request Rate",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(api_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} {{status_code}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "API Latency (95th percentile)",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "stat",
        "title": "Error Rate",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(api_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(api_requests_total[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "QPS by Endpoint",
        "gridPos": {"x": 8, "y": 8, "w": 16, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(api_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "datasource": "Prometheus"
      }
    ]
  }
}
